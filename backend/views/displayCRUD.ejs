<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Display CRUD</title>
    <style>
        table, th, td {
          border:1px solid black;
        }
    </style>
</head>
<body>
          
    <table style="width:100%">
        <tr>
          <th>Email</th>
          <th>First Name</th>
          <th>Last Name</th>
          <th>Address</th>
          <th>Actions</th>
        </tr>

        <% for(let i=0; i <data.length ; i++) { %>
            <tr>
              <td><%= data[i].email %></td>
              <td><%= data[i].firstName %></td>
              <td><%= data[i].lastName %></td>
              <td><%= data[i].address %></td>

              <td>
                <a href="/edit-crud?id=<%=data[i].id%>" >Edit</a>
                <a href="/delete-crud?id=<%=data[i].id%>">Delete</a>
              </td>
             
            </tr>
         <% } %>

        
        
      </table>


    
</body>
</html>